


<h3 style="padding-top: 10px;">Search for quotes by category </h3>
<%= form_tag search_path, method: :get do %>
    <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :category_query, params[:category_query], placeholder: 'Enter a category', class: "form-control" %>
    </div>
    <%= submit_tag 'Search Quotes', class: "btn btn-primary" %>
  <% end %>
  

  <% if params[:category_query].present? %>
  <% if @quotes.present? %>
    <h4 style="padding-top: 15px;">Results:</h4>
    <% @quotes.each do |quote| %>
      <h5 class="text-primary">"<%= quote.text %>"</h5>
      <p>Attributed to: <strong><%= quote.philosopher.first_name %> <%= quote.philosopher.last_name %></strong></p>
      <p>Category: <%= quote.categories.map(&:name).join(", ") %></p>
      <p>Publication Year: <%= quote.publication_year || 'Unknown' %></p>
      <p>Comment: <%= quote.comment || 'No comment' %></p>
      <hr />
    <% end %>
  <% else %>
    <p>No matching quotes found for "<%= params[:category_query] %>".</p>
  <% end %>
<% end %>